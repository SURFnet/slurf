{% set pagetitle = 'Select an account to continue'|trans %}

{% extends "base.twig" %}

{% block content %}

<div class="item">
<h1>{{ pagetitle }}</h1>

<p>{% trans %}Which account do you want to log into Mastodon with?{% endtrans %}</p>

<form action="{{ target }}" method="post" class="pure-form">
    {% for name, value in data -%}
    <input type="hidden" name="{{ name }}" value="{{ value }}">
    {%- endfor %}

    {% for nickname in choices %}
        <p>
             <button type="submit" class="pure-button" name="proceed" value="{{nickname}}">@{{ nickname }}</button>
        </p>
    {% endfor %}

</form>
</div>
{% endblock %}

